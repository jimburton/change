  other-modules:       Change
  hs-source-dirs:      test, src
  Ghc-Options:         -Wall
  Build-depends:       base
                     , HUnit                     
  default-language:    Haskell2010

Test-Suite test-quickcheck
  Type:                exitcode-stdio-1.0
  Main-is:             TestQuickCheck.hs
  other-modules:       Change
  hs-source-dirs:      test, src
  Ghc-Options:         -Wall
  Build-depends:       base
                     , test-framework
                     , test-framework-quickcheck2
                     , QuickCheck                     
  default-language:    Haskell2010